#include<stdio.h>
int main() {

 int N;
 int binary [32] ;


 int i=0 ;

  printf ("enter the N :") ;


  scanf("%d" ,&N);

  while(N>0) {

      binary[i] = N % 2 ;

      N = N/2 ;

      i++;
  }
  printf ("binary value:") ;

  for(int j=i-1 ; j>=0 ; j--) {

     printf ("%d" , binary [j]) ;

  }
  printf ("\n") ;

  return 0;

}
