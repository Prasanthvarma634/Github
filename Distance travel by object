#include<stdio.h>

int main () {

    float u, a, d;

    int t ;

    printf ("enter u:") ;

    scanf ("%f" , &u);

    printf ("enter a:") ;

    scanf ("%f" ,&a) ;

    printf ("enter t:");

    scanf ("%d" , &t) ;

    d =(u*t) + (a*t*t)/2;

    printf ("enter the d value :%.2f", d) ;

    return 0;

}
