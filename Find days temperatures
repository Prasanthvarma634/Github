#include <stdio.h>

int main() {
    int n;
    printf("Enter number of days: ");
    scanf("%d", &n);

    float temps[n], sum = 0;

    
    for(int i = 0; i < n; i++) {
        printf("Day %d temp: ", i+1);
        scanf("%f", &temps[i]);
        sum += temps[i];
    }

    
    printf("\nTemperatures: ");
    for(int i = 0; i < n; i++) {
        printf("%.1f ", temps[i]);
    }

    
    float avg = sum / n;
    printf("\nSum: %.1f", sum);
    printf("\nAverage: %.1f\n", avg);

    return 0;
}
